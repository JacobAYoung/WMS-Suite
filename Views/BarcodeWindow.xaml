<Window x:Class="WMS_Suite.Views.BarcodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMS_Suite.Views"
        mc:Ignorable="d"
        Title="Barcode Preview" Height="200" Width="350">
    <StackPanel>
        <Image x:Name="BarcodeImage" Height="100" Margin="5"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Print" Click="Print_Click" Margin="5"/>
            <Button Content="Save PNG" Click="Save_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
